{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "strict": true,
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "jsx": "preserve",
        "types": ["vite/client"],
        "noImplicitAny": false,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "removeComments": true,
        "outDir": "dist"
    },
    "include": ["src"]
}